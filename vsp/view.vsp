	http(DB.DBA.PV_GEN_LINK (2, _link, 'text/cxml', 'CXML'));
	if (_dynamic_collection = 1) {
	    http(DB.DBA.PV_GEN_LINK (2, _link, 'text/csv',                   'CSV'));
